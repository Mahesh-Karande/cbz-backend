pipeline {
    agent any
    stages {
        stage('pull'){
            steps {
                git branch: 'main', url: 'https://github.com/Mahesh-Karande/Cbz-Backend.git'
            }
        }
        stage('build'){
            steps {
                sh 'mvn clean package'
            }
        }
        stage('deploy'){
            steps {
                sh '''
                    docker build -t mahes-image .
                    docker tag mahes-image:latest 730335556816.dkr.ecr.ap-south-1.amazonaws.com/mahes-image:latest
                    docker push 730335556816.dkr.ecr.ap-south-1.amazonaws.com/mahes-image:latest
                    docker rmi mahes-image
                    kubectl apply -f ./yaml/
                '''
            }
        }
    }
}